@model IEnumerable<Billycock.DTO.PlataformaDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idPlataforma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numeroMaximoUsuarios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idEstado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idPlataforma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroMaximoUsuarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idEstado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idPlataforma">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idPlataforma">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idPlataforma">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
